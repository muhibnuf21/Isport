<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".Schedule">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/rectangle1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:src="@drawable/path_3">

    </ImageView>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/power"
        android:id="@+id/Zoom_Out"
        android:onClick="btn_zoomout"
        android:background="@android:color/transparent"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true">

    </ImageButton>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_1"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp">

    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_sports"
        android:id="@+id/teks1"
        android:layout_below="@+id/rectangle1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:shadowColor="@color/colorPrimaryDark"
        android:textSize="20sp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/line_1"
        android:id="@+id/garis1"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/teks1"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/garis2"
        android:src="@drawable/line_1"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/teks1"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:outlineSpotShadowColor="@android:color/darker_gray"
        android:id="@+id/spinners"
        android:gravity="center_horizontal"
        />
</RelativeLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/imageschedule"
        android:id="@+id/green"
        android:layout_marginTop="5dp"
        />

</LinearLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/garis3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-35dp"
        android:src="@drawable/line_1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/schedule"
        android:text="@string/schedule"
        android:textSize="20sp"
        android:layout_alignTop="@id/garis3"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:layout_marginStart="35dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/time"
        android:id="@+id/time"
        android:textSize="20sp"
        android:layout_alignTop="@id/garis3"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="55dp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/garis4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/schedule_icon"
        android:layout_centerHorizontal="true"
        android:src="@drawable/line_1" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/group_6"
        android:id="@+id/schedule_icon"
        android:layout_below="@+id/schedule"
        android:background="@android:color/transparent"
        android:layout_marginStart="45dp"
        android:layout_marginTop="5dp"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/group_8"
        android:id="@+id/time_icon"
        android:onClick="btn_time"
        android:layout_below="@+id/time"
        android:layout_marginEnd="35dp"
        android:background="@android:color/transparent"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/group_4"
        android:id="@+id/checknow"
        android:background="@android:color/transparent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>

</LinearLayout>